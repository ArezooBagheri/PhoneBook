
@model List<PhoneBook.Core.Domain.Persons.Entities.Person>
@inject IResourceManager _resourceManager
@{
    ViewData["Title"] = _resourceManager[SharedResource.Contacts];
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3>
                    <i class="fa fa-save"></i>
                    @_resourceManager[SharedResource.Contacts]
                </h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-light">
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @item.FirstName
                        </td>
                        <td>
                            @item.LastName
                        </td>
                        <td>
                            @item.Phone.PhoneNumber
                        </td>
                    </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            @_resourceManager[SharedResource.NoDate]
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>



